{
  "expo": {
    "name": "noteworthy",
    "slug": "noteworthy",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-audio"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.noteworthy",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires microphone access for pitch detection."
       }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.noteworthy",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {}
  }
}
